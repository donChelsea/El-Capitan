<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/capitanPrimary"
    tools:context=".frag.ProfileFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profile_title_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/comfortaa"
                android:scrollHorizontally="false"
                android:text="@string/title"
                android:gravity="center"
                android:textColor="@color/capitanPrimeText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toEndOf="@+id/profile_company_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_company_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@+id/profile_company_logo"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/capitanPrimeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_title_textview" />

            <ImageView
                android:id="@+id/profile_company_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp"
                tools:src="@tools:sample/avatars"
                android:layout_margin="8dp"
                android:background="@color/capitanWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_created_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="@string/created_at"
                android:textColor="@color/capitanPrimeText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_company_logo"
                app:layout_constraintTop_toBottomOf="@+id/profile_location_textview" />

            <TextView
                android:id="@+id/profile_location_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/location_view"
                android:textSize="15sp"

                android:layout_margin="8dp"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/capitanPrimeText"
                app:layout_constraintStart_toEndOf="@+id/profile_company_logo"
                app:layout_constraintTop_toBottomOf="@id/profile_company_textview"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/profile_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/description"
                android:textColor="@color/capitanSecondaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_company_logo" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>